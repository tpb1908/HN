<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
                    android:id="@+id/item_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/item_title_line_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_title"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Test title"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@android:style/TextAppearance.Material.Title"/>

            <TextView

                android:id="@+id/item_url"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="test.test.com"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Info"/>
        </LinearLayout>


        <TextView
            android:id="@+id/item_stats"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_below="@+id/item_title_line_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 points 32 comments 5 hours ago"
            android:textAppearance="@android:style/TextAppearance.Material.Small"/>

        <TextView
            android:id="@+id/item_author"
            android:layout_alignBaseline="@+id/item_stats"
            android:layout_toEndOf="@+id/item_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" by user"/>

        <ImageView
            android:id="@+id/item_image"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"/>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_large_title_wrapper"
        android:alpha="0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/item_large_title"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the title"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@android:style/TextAppearance.Material.Large"/>

    </LinearLayout>



</FrameLayout>

