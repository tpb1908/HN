<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/spritzer_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/skimmer_touch_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.andrewgiang.textspritzer.lib.SpritzerTextView
                android:id="@+id/spritzer_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textSize="26sp"
                android:typeface="monospace"
                app:clickControls="true"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/skimmer_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                />

            <ProgressBar
                android:id="@+id/skimmer_spritzer_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

            <Button
                android:id="@+id/skimmer_restart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_skimmer_restart"
                android:background="@color/colorPrimary"
                />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>