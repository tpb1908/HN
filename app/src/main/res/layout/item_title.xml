<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                android:padding="8dp">

    <ImageButton
        android:id="@+id/story_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arrow_back"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/item_title"
        android:padding="8dp"
        android:layout_toEndOf="@id/story_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Title"/>

    <TextView
        android:id="@+id/item_stats"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_below="@id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Small"/>

    <TextView
        android:id="@+id/item_author"
        android:layout_alignBaseline="@+id/item_stats"
        android:layout_toEndOf="@id/item_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_url"
        android:layout_below="@id/item_stats"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Info"/>

</RelativeLayout>

