<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/item_card"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="48dp"

                                    card_view:cardCornerRadius="3dp"
    >
         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="match_parent">

             <FrameLayout
                 android:layout_width="48dp"
                 android:layout_height="match_parent">

                 <TextView
                     android:id="@+id/item_number"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:layout_width="48dp"
                     android:layout_height="wrap_content"
                     android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

             </FrameLayout>

             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingTop="8dp"
                 android:paddingBottom="8dp">

                 <TextView
                     android:id="@+id/item_title"
                     android:paddingStart="8dp"
                     android:paddingTop="8dp"
                     android:paddingEnd="8dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:ellipsize="end"
                     android:text="@string/text_title_empty"
                     android:textStyle="bold"
                     android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

                 <TextView
                     android:id="@+id/item_stats"
                     android:paddingStart="10dp"
                     android:paddingEnd="8dp"
                     android:layout_below="@+id/item_title"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/text_info_empty"
                     android:textAppearance="@android:style/TextAppearance.Material.Small"/>

                 <TextView
                     android:id="@+id/item_author"
                     android:paddingStart="10dp"
                     android:paddingEnd="10dp"
                     android:layout_below="@+id/item_stats"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>

                 <TextView
                     android:id="@+id/item_url"
                     android:layout_below="@+id/item_stats"
                     android:layout_alignBaseline="@+id/item_author"
                     android:layout_toEndOf="@+id/item_author"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textAppearance="@android:style/TextAppearance.Material.Notification.Info"/>

             </RelativeLayout>


         </LinearLayout>


</android.support.v7.widget.CardView>