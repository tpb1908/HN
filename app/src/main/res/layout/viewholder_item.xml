<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minHeight="72dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_title"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/text_title_empty"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <TextView
                android:id="@+id/item_stats"
                android:paddingStart="10dp"
                android:paddingEnd="8dp"
                android:layout_below="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_details_empty"
                android:textAppearance="@android:style/TextAppearance.Material.Small"/>

            <TextView
                android:id="@+id/item_author"
                android:layout_alignBaseline="@+id/item_stats"
                android:layout_toEndOf="@+id/item_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_url"
                android:paddingStart="10dp"
                android:layout_below="@+id/item_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Notification.Info"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>